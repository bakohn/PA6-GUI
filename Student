public class Student { 

    private String firstName; 
    private String lastName; 
    private String studentYear; 
    private String studentMajor; 
    private double GPA; 
    private String studentEmail; 
    private int studentID; 
    private static int nextStudentID = 100; 

    public Student(String name, int year, String major, double GPA, String email)  

    { 
        //Did some research to learn about the split method. 
        //Do not use methods in constructor, find a different way to split.
        String[] firstandlast = name.split(" "); 
        this.firstName = firstandlast[0]; 
        this.lastName = firstandlast[1]; 
         
        this.studentID = nextStudentID; 
        studentMajor = major; 
        
        if (GPA >= 0 && GPA <= 5) {
            this.GPA = GPA;
        } else {
            System.out.println("Invalid input. Please enter a GPA between 0.0 and 5.0");
        }
        
        if (email.contains('@')) {
            this.email = email;
        } else {
            System.out.println("Invalid input. Please enter email with @");
        }
    }
        
        studentEmail = email; 
        nextStudentID++; 

        switch (year) { 
            case 1: 
                this.studentYear = "Freshman"; 
                break; 
            case 2: 
                this.studentYear = "Sophomore"; 
                break; 
            case 3: 
                this.studentYear = "Junior"; 
                break; 
            case 4: 
                this.studentYear = "Senior"; 
                break; 
            default: 
                this.studentYear = "Invalid Year";

        } 
    }

    public void setGPA (double GPA) { 
        if (GPA >= 0 && GPA <= 5) {
            this.GPA = GPA;
        } else {
            System.out.println("Invalid input. Please enter a GPA between 0.0 and 5.0");
        }
    }
    
    public double getGPA() { 
        return GPA; 
    } 
    
    //Combine first and last name
    public String getName() { 
        return firstName + " " + lastName; 
    } 

    public int getStudentID() { 
        return studentID; 
    } 

    public void setStudentEmail(String email) { 
        if (email.contains('@')) {
            this.email = email;
        } else {
            System.out.println("Invalid input. Please enter email with @");
        } 
    } 
    
    public String getStudentYear() { 
        return studentYear; 
    } 
    
    public void setStudentYear(int year) { 
        switch (year) { 
            case 1: 
                this.studentYear = "Freshman"; 
                break; 
            case 2: 
                this.studentYear = "Sophomore"; 
                break; 
            case 3: 
                this.studentYear = "Junior"; 
                break; 
            case 4: 
                this.studentYear = "Senior"; 
                break; 
            default: 
                this.studentYear = "Invalid Year"; 
        } 
    } 

    public String getStudentMajor() { 
        return studentMajor; 
    } 
    public void setStudentMajor(String major) { 
        studentMajor = major; 
    } 
    
    //Used to dislpay student information when the printRoster method is called 
    //in main instead of the reference to memory. 
    @Override
    public String toString() {
        return "Student ID#: " + getStudentID() + " " + getName() +
               " Major: " + getStudentMajor() + " Year: " + getStudentYear();
    }

} 

 
